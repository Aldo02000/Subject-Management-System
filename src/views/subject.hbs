<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subject Description - Mathematics</title>
    <base href="/">
    <link rel="stylesheet" type="text/css" href="CSS/subject.css" />
    <script src="../page.js"></script>   
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-menu">
                <div class="logo">STUMA</div>
                <ul class="menu-items">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Course Modules</a></li>
                    <li><a href="#">Slides</a></li>
                    <li><a href="#">Student Search</a></li>
                    <li><a href="#">Attendance</a></li>
                    <li><a href="#">Setting</a></li>
                </ul>
                <div class="logout-section">
                     <a href="/logout"><button>Logout</button></a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="header">           
                <div class="search-bar">
                    <input type="text" placeholder="Search">
                    <button>üîç</button>
                </div>
                <div class="user-profile">
                    <img src="https://via.placeholder.com/150" alt="Profile">
                    <span>{{name}}</span>
                </div>
            </header>

            <!-- Subject Title Section -->
            <section class="subject-title">
                <h1>{{name}}</h1>
            </section>

            <!-- Subject Description Section -->
            <section class="subject-description">
                <p>
                    Here comes the description of each subject. 
                </p>
            </section>



<!-- Announcements Section -->
            <section class="announcements">
                <h2>Announcements</h2>
                <ul>
                    <!-- Dynamically list announcements here. Example: -->
                    <li>New assignment uploaded.</li>
                    <li>Midterm exam schedule announced.</li>
                    <!-- More announcements -->
                </ul>
            </section>
            
            <!-- Uploading Lecture Material Section -->
            <section class="upload-material">
                <h2>Upload Lecture Material</h2>
                <form action="/path/to/upload" method="post" enctype="multipart/form-data">
                    <input type="file" name="lectureMaterial" required>
                    <button type="submit">Upload</button>
                </form>
            </section>




            <!-- Enrolled Students Section -->
            <section class="enrolled-students">
                <h2>Enrolled Students</h2>
                <ul>
                    <li>
                        <span>Student A</span>
                        <button class="de-enroll-button">De-enroll</button>
                    </li>
                    <li>
                        <span>Student B</span>
                        <button class="de-enroll-button">De-enroll</button>
                    </li>
                    
                </ul>
            </section>
        </div>
    </div>
</body>
</html>

