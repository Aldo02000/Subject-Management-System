        <!-- ====================================
        ——— CONTENT WRAPPER
        ===================================== -->
        <div class="content-wrapper">
            <div class="content">


                <div class="breadcrumb-wrapper">
                    <h1>{{subject_name}}</h1>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card card-default">
                            <div class="card-header card-header-border-bottom">
                                <h2>Description</h2>
                            </div>

                            <div class="card-body">
                                <p class="mb-5">{{descriptionText}}</p>
                            </div>

                            {{#if isProfessor}}
                                <div class="col-lg-12">
                                    <h3 id="edit-description">Edit Description</h3>
                                    <form action="{{subjectId}}/edit-description" method="post">
                                        <label id="textarea-label">
                                            <textarea class="form-control" id="exampleFormControlInput1"
                                                      name="description" rows="5" cols="50"></textarea>
                                        </label>
                                        <button type="submit" id="Submit-description"
                                                class="btn btn-primary btn-default">Submit
                                        </button>
                                    </form>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-header card-header-border-bottom">
                        <h2>Announcements</h2>
                    </div>

                    <div class="card-body">

                        {{#if isProfessor}}
                            {{#each announcementRows}}

                                <div class="carousel-inner">

                                    <div class="carousel-item active">
                                        <div class="card border-0 text-center">

                                            <div class="card-body">
                                                <p id="announcement-paragraph">{{this.announcement}}</p>
                                                <form action="/welcome/{{this.professor_id}}/subject/{{this.subject_id}}/deleteAnnouncement/{{this.announcement_id}}"
                                                      method="POST">
                                                    <button type="submit" class="btn btn-primary btn-default"
                                                            id="delete-subject-button">Delete
                                                    </button>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            {{/each}}

                            <div class="form-footer pt-3 border-top">
                                <button type="submit" id="addAnnouncementBtn" class="btn btn-primary btn-default">Add
                                    Announcement
                                </button>
                            </div>

                            <form action="/welcome/{{Id}}/subject/{{subjectId}}/add-announcement" method="post" id="announcementForm"
                                  style="display:none;">
                                <label id="textarea-label">
                                    <textarea class="form-control" id="exampleFormControlInput1"
                                              name="announcement" rows="5" cols="50"></textarea>
                                </label>
                                <button type="submit" class="btn btn-primary btn-default" id="submit-announcement">
                                    Submit
                                </button>
                            </form>

                        {{else}}
                            {{#each announcementRows}}
                                <div class="carousel-inner">

                                    <div class="carousel-item active">
                                        <div class="card border-0 text-center">
                                            <div class="card-body">
                                                <p>{{this.announcement}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        {{/if}}
                    </div>
                </div>


            </div> <!-- End Content -->
        </div> <!-- End Content Wrapper -->


