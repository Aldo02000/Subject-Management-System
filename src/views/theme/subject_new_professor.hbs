<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <!-- theme meta -->
    <!--    <meta name="theme-name" content="sleek"/>-->

    <title>STUMA - Student Subject Management System</title>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500|Poppins:400,500,600,700|Roboto:400,500"
          rel="stylesheet"/>

    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet"/>

    <!-- PLUGINS CSS STYLE -->
    <link rel="stylesheet" type="text/css" href="../../../src/views/source/assets/plugins/simplebar/simplebar.css"/>

    <!-- SLEEK CSS -->
    <link id="sleek-css" rel="stylesheet" href="../../../src/views/theme/assets/css/sleek.css"/>

    <!-- FAVICON -->
    <link href="../../../src/views/theme/assets/img/favicon.png" rel="shortcut icon"/>
</head>

<body class="header-fixed sidebar-fixed sidebar-dark header-light" id="body">

<!-- ====================================
——— WRAPPER
===================================== -->
<div class="wrapper">

    <!-- ====================================
      ——— LEFT SIDEBAR WITH OUT FOOTER
    ===================================== -->
    <aside class="left-sidebar bg-sidebar">
        <div id="sidebar" class="sidebar sidebar-with-footer">
            <!-- Aplication Brand -->
            <div class="app-brand">
                <a href="/user" title="Sleek Dashboard">
                    <svg
                            class="brand-icon"
                            xmlns="http://www.w3.org/2000/svg"
                            preserveAspectRatio="xMidYMid"
                            width="30"
                            height="33"
                            viewBox="0 0 30 33">
                        <g fill="none" fill-rule="evenodd">
                            <path class="logo-fill-blue" fill="#7DBCFF" d="M0 4v25l8 4V0zM22 4v25l8 4V0z"/>
                            <path class="logo-fill-white" fill="#FFF" d="M11 4v25l8 4V0z"/>
                        </g>
                    </svg>

                    <span class="brand-name text-truncate">Dashboard</span>
                </a>
            </div>

            <!-- begin sidebar scrollbar -->
            <div class="" data-simplebar style="height: 100%;">
                <!-- sidebar menu -->
                <ul class="nav sidebar-inner" id="sidebar-menu">
                    <li class="has-sub ">
                        <a class="sidenav-item-link" href="javascript:void(0)" data-toggle="collapse" data-target="#app"
                           aria-expanded="false" aria-controls="app">
                            <i class="mdi mdi-pencil-box-multiple"></i>
                            <span class="nav-text">Subjects</span> <b class="caret"></b>
                        </a>

                        {{#each subjects}}
                            <ul class="collapse " id="app" data-parent="#sidebar-menu">
                                <div class="sub-menu">
                                    <li class="">
                                        <a class="sidenav-item-link"
                                           href="/subject/{{this.subject_id}}">
                                            <span class="nav-text">{{this.name}}</span>
                                        </a>
                                    </li>
                                </div>
                            </ul>
                        {{/each}}
                    </li>

                    <li class="has-sub ">
                        <a class="sidenav-item-link" href="javascript:void(0)" data-toggle="collapse"
                           data-target="#forms"
                           aria-expanded="false" aria-controls="forms">
                            <i class="mdi mdi-email-mark-as-unread"></i>
                            <span class="nav-text">Page Content</span> <b class="caret"></b>
                        </a>

                        <ul class="collapse " id="forms" data-parent="#sidebar-menu">
                            <div class="sub-menu">
                                <li class="">
                                    <a class="sidenav-item-link" href="#description">
                                        <span class="nav-text">Description</span>
                                    </a>
                                </li>

                                <li class="">
                                    <a class="sidenav-item-link" href="#Announcements">
                                        <span class="nav-text">Announcements</span>
                                    </a>
                                </li>

                                <li class="">
                                    <a class="sidenav-item-link" href="#Lectures">
                                        <span class="nav-text">Lectures</span>
                                    </a>
                                </li>

                                <li class="">
                                    <a class="sidenav-item-link" href="#labs">
                                        <span class="nav-text">Labs</span>
                                    </a>
                                </li>

                                <li class="">
                                    <a class="sidenav-item-link" href="#students">
                                        <span class="nav-text">Students</span>
                                    </a>
                                </li>
                            </div>
                        </ul>
                    </li>

                    <li class="has-sub ">
                        <a class="sidenav-item-link" href="javascript:void(0)" data-toggle="collapse"
                           data-target="#tables"
                           aria-expanded="false" aria-controls="tables">
                            <i class="mdi mdi-table"></i>
                            <span class="nav-text">Calendar</span>
                        </a>
                    </li>


                    <li class="has-sub ">
                        <a class="sidenav-item-link" href="javascript:void(0)" data-toggle="collapse"
                           data-target="#icons"
                           aria-expanded="false" aria-controls="icons">
                            <i class="mdi mdi-diamond-stone"></i>
                            <span class="nav-text">Gradebook</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </aside>


    <!-- ====================================
  ——— PAGE WRAPPER
  ===================================== -->
    <div class="page-wrapper">

        <!-- Header -->
        <header class="main-header " id="header">
            <nav class="navbar navbar-static-top navbar-expand-lg">
                <!-- Sidebar toggle button -->
                <button id="sidebar-toggler" class="sidebar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                </button>
                <!-- search form -->
                <div class="search-form d-none d-lg-inline-block">
                    <div class="input-group">
                    </div>
                    <div id="search-results-container">
                        <ul id="search-results"></ul>
                    </div>
                </div>

                <div class="navbar-right ">
                    <ul class="nav navbar-nav">
                        <li class="right-sidebar-in right-sidebar-2-menu">
                            <i class="mdi mdi-settings"></i>
                        </li>
                        <!-- User Account -->
                        <li class="dropdown user-menu">
                            <button href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                <i class="bi bi-person" id="person-icon"></i>
                                <span class="d-none d-lg-inline-block">{{name}}</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <!-- User image -->
                                <li class="dropdown-header">
                                    <div class="d-inline-block">
                                        {{name}} <small class="pt-1">{{email}}</small>
                                    </div>
                                </li>
                                <li class="dropdown-footer">
                                    <form action="/logout" method="POST" id="logout-form">
                                        <i class="mdi mdi-logout"></i>
                                        <button> Log Out</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>


        <!-- ====================================
        ——— CONTENT WRAPPER
        ===================================== -->
        <div class="content-wrapper">
            <div class="content">


                <div class="breadcrumb-wrapper">
                    <h1>{{subject_name}}</h1>
                </div>

                <div class="row" id="description">
                    <div class="col-lg-12">
                        <div class="card card-default">
                            <div class="card-header card-header-border-bottom">
                                <h2>Description</h2>
                            </div>

                            <div class="card-body">
                                <p class="mb-5">{{descriptionText}}</p>
                            </div>
                            <div class="col-lg-12">
                                <h3 id="edit-description">Edit Description</h3>
                                <form action="{{subjectId}}/edit-description" method="post">
                                    <label id="textarea-label">
                                            <textarea class="form-control" id="exampleFormControlInput1"
                                                      name="description" rows="5" cols="50"></textarea>
                                    </label>
                                    <button type="submit" id="Submit-description"
                                            class="btn btn-primary btn-default">Submit
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default" id="Announcements">
                    <div class="card-header card-header-border-bottom">
                        <h2>Announcements</h2>
                    </div>

                    <div class="card-body">

                        {{#each announcementRows}}

                            <div class="carousel-inner">

                                <div class="carousel-item active">
                                    <div class="card border-0 text-center">

                                        <div class="card-body">
                                            <p id="announcement-paragraph">{{this.announcement}}</p>
                                            <form action="/subject/{{this.subject_id}}/deleteAnnouncement/{{this.announcement_id}}"
                                                  method="POST">
                                                <button type="submit" class="btn btn-primary btn-default"
                                                        id="delete-subject-button">Delete
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        {{/each}}

                        <div class="form-footer pt-3 border-top">
                            <button type="submit" id="addAnnouncementBtn" class="btn btn-primary btn-default">Add
                                Announcement
                            </button>
                        </div>

                        <form action="/subject/{{subjectId}}/add-announcement" method="post"
                              id="announcementForm"
                              style="display:none;">
                            <label id="textarea-label">
                                    <textarea class="form-control" id="exampleFormControlInput1"
                                              name="announcement" rows="5" cols="50"></textarea>
                            </label>
                            <button type="submit" class="btn btn-primary btn-default" id="submit-announcement">
                                Submit
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card card-default" id="Lectures">
                    <div class="card-header card-header-border-bottom">
                        <h2>Lectures</h2>
                    </div>

                    <div class="card-body">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <form action="/subject/{{subjectId}}/upload-lecture"
                                      enctype="multipart/form-data" method="post">
                                    <label for="fileUpload">Select a file:</label>
                                    <input type="file" id="fileUpload" name="pdfFile" accept=".pdf,.doc,.docx,.txt"
                                           required>
                                    <button type="submit" class="btn btn-primary btn-default">Upload</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    {{#each lectureFilePath}}
                        <div class="card-body" id="pdfFiles">
                            <div class="carousel-inner">
                                <div class="carousel-item active" id="pdfContainer">
                                    <i class="bi bi-file-pdf" id="pdf-icon"></i>
                                    <a href="../../../{{this.filepath}}"
                                       download="{{this.filename}}">{{this.filename}}</a>
                                    <form action="{{this.subject_id}}/delete-pdf/{{this.id}}"
                                          method="POST">
                                        <button type="submit" class="btn btn-primary btn-default"
                                                id="delete-subject-button">Delete
                                        </button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    {{/each}}
                </div>

                <div class="card card-default" id="labs">
                    <div class="card-header card-header-border-bottom">
                        <h2>Labs</h2>
                    </div>

                    <div class="card-body">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <form action="/subject/{{subjectId}}/upload-labs"
                                      enctype="multipart/form-data" method="post">
                                    <label for="fileUpload">Select a file:</label>
                                    <input type="file" id="fileUpload" name="pdfFile" accept=".pdf,.doc,.docx,.txt"
                                           required>
                                    <button type="submit" class="btn btn-primary btn-default">Upload</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    {{#each labFilePath}}
                        <div class="card-body" id="pdfFiles">
                            <div class="carousel-inner">
                                <div class="carousel-item active" id="pdfContainer">
                                    <i class="bi bi-file-pdf" id="pdf-icon"></i>
                                    <a href="../../../{{this.filepath}}"
                                       download="{{this.filename}}">{{this.filename}}</a>
                                    <form action="{{this.subject_id}}/delete-pdf/{{this.id}}"
                                          method="POST">
                                        <button type="submit" class="btn btn-primary btn-default"
                                                id="delete-subject-button">Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <div class="card card-default" id="labs">
                    <div class="card-header card-header-border-bottom">
                        <h2>Past Exams</h2>
                    </div>

                    <div class="card-body">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <form action="/subject/{{subjectId}}/upload-exams"
                                      enctype="multipart/form-data" method="post">
                                    <label for="fileUpload">Select a file:</label>
                                    <input type="file" id="fileUpload" name="pdfFile" accept=".pdf,.doc,.docx,.txt"
                                           required>
                                    <button type="submit" class="btn btn-primary btn-default">Upload</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    {{#each examFilePath}}
                        <div class="card-body" id="pdfFiles">
                            <div class="carousel-inner">
                                <div class="carousel-item active" id="pdfContainer">
                                    <i class="bi bi-file-pdf" id="pdf-icon"></i>
                                    <a href="../../../{{this.filepath}}"
                                       download="{{this.filename}}">{{this.filename}}</a>
                                    <form action="{{this.subject_id}}/delete-pdf/{{this.id}}"
                                          method="POST">
                                        <button type="submit" class="btn btn-primary btn-default"
                                                id="delete-subject-button">Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <div class="card card-table-border-none recent-orders" id="recent-orders">
                    <div class="card-header justify-content-between" id="students">
                        <h2>Enrolled Students ({{numberOfStudents}})</h2>
                    </div>
                    <div class="card-body pt-0 pb-5">
                        <table class="table card-table table-responsive table-responsive-large"
                               style="width:100%">
                            <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th class="d-none d-lg-table-cell">Email</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each students}}
                                <tr>
                                    <td>{{this.Id}}</td>
                                    <td>{{this.NameOfUser}}</td>
                                    <td>{{this.Email}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div> <!-- End Content -->
        </div> <!-- End Content Wrapper -->


        <!-- Footer -->
        <!-- Footer -->
        <footer class="footer mt-auto">
            <div class="copyright bg-white">
                <p>
                    Copyright &copy; <span id="copy-year">2024</span>
                    STUMA
                </p>
            </div>
        </footer>

    </div> <!-- End Page Wrapper -->
</div> <!-- End Wrapper -->

<!-- Javascript -->
<script src="../../../src/views/source/assets/plugins/jquery/jquery.min.js"></script>
<script src="../../../node_modules/jquery/dist/jquery.min.js"></script>
<script src="../../../src/views/theme/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="../../../src/views/source/assets/plugins/simplebar/simplebar.min.js"></script>
<script src="../../../src/views/theme/assets/js/sleek.js"></script>
<link href="../../../src/views/source/assets/options/optionswitch.css" rel="stylesheet">
<script src="../../../src/views/source/assets/options/optionswitcher.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const addAnnouncementBtn = document.getElementById('addAnnouncementBtn');
        const announcementForm = document.getElementById('announcementForm');
        addAnnouncementBtn.addEventListener('click', function () {
            announcementForm.style.display = 'block';
        });
    });
</script>

</body>
</html>

